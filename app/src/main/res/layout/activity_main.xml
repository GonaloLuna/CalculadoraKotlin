<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:background="@color/gray"
        android:inputType="textPersonName"
        android:textSize="40pt"
        android:gravity="right|center"
        android:layout_marginBottom="2pt"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/botonParen"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text=""
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/colorAccent"
                ></Button>
            <Button
                android:id="@+id/botonPorcen"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="%"
                android:onClick="OperatorEvent"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/colorAccent"
                ></Button>
            <Button
                android:id="@+id/botonC"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="C"
                android:onClick="delEvent"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/colorAccent"
                ></Button>
            <Button
                android:id="@+id/botonDiv"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="/"
                android:onClick="OperatorEvent"
                android:textSize="10pt"
                android:background="@color/colorAccent"
                ></Button>
        ></TableRow>
        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/boton7"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="7"
                android:onClick="numberEvent"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/boton8"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="8"
                android:onClick="numberEvent"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/boton9"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="9"
                android:onClick="numberEvent"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/botonMul"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="x"
                android:onClick="OperatorEvent"
                android:textSize="10pt"
                android:background="@color/colorAccent"
                ></Button>
            ></TableRow>
        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/boton4"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="4"
                android:onClick="numberEvent"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/boton5"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="5"
                android:onClick="numberEvent"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/boton6"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="6"
                android:onClick="numberEvent"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/botonMenos"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="-"
                android:onClick="OperatorEvent"
                android:textSize="10pt"
                android:background="@color/colorAccent"
                ></Button>
            ></TableRow>
        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/boton1"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="1"
                android:onClick="numberEvent"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/boton2"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="2"
                android:onClick="numberEvent"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/boton3"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="3"
                android:onClick="numberEvent"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/botonMas"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="+"
                android:onClick="OperatorEvent"
                android:textSize="10pt"
                android:background="@color/colorAccent"
                ></Button>
            ></TableRow>
        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/botonDEL"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="DEL"
                android:onClick="delEvent"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/boton0"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="0"
                android:onClick="numberEvent"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/botonPunto"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="."
                android:onClick="numberEvent"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/botonIgual"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="="
                android:onClick="equalEvent"
                android:textSize="10pt"
                android:background="@color/colorPrimary"
                ></Button>
            ></TableRow>
    </TableLayout>
</LinearLayout>
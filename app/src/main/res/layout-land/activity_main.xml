<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2pt"
        android:layout_weight="1"
        android:background="@color/gray"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="30pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/botonBi"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="BiN"

                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/orange"
                ></Button>
            <Button
                android:id="@+id/botonHex"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="Hex"

                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/orange"
                ></Button>
            <Button
                android:id="@+id/botonCc"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="C"
                android:onClick="delEvent2"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/colorAccent"
                ></Button>
            <Button
                android:id="@+id/botonDivv"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="/"
                android:onClick="OperatorEvent2"
                android:textSize="10pt"
                android:background="@color/colorAccent"
                ></Button>
            ></TableRow>
        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/boton77"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="7"
                android:onClick="numberEvent2"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/boton88"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="8"
                android:onClick="numberEvent2"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/boton99"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="9"
                android:onClick="numberEvent2"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/botonMull"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="x"
                android:onClick="OperatorEvent2"
                android:textSize="10pt"
                android:background="@color/colorAccent"
                ></Button>
            ></TableRow>
        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/boton44"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="4"
                android:onClick="numberEvent2"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/boton55"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="5"
                android:onClick="numberEvent2"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/boton66"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="6"
                android:onClick="numberEvent2"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/botonMenoss"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="-"
                android:onClick="OperatorEvent2"
                android:textSize="10pt"
                android:background="@color/colorAccent"
                ></Button>
            ></TableRow>
        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/boton11"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="1"
                android:onClick="numberEvent2"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/boton22"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="2"
                android:onClick="numberEvent2"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/boton33"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="3"
                android:onClick="numberEvent2"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/botonMass"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="+"
                android:onClick="OperatorEvent2"
                android:textSize="10pt"
                android:background="@color/colorAccent"
                ></Button>
            ></TableRow>
        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/botonDELl"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="DEL"
                android:onClick="delEvent2"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/boton00"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="0"
                android:onClick="numberEvent2"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/botonPuntoo"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="."
                android:onClick="numberEvent2"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/botonIguall"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:text="="
                android:onClick="equalEvent2"
                android:textSize="10pt"
                android:background="@color/colorPrimary"
                ></Button>
            ></TableRow>
    </TableLayout>
</LinearLayout>